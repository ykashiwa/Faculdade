        /* 5. Imagem com bordas arredondadas e tamanho adequado */
        img {
            border-radius: 10px;
            width: 400px;
            height: auto;
        }

        /* 6. Estilo para tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #999;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #dcdcdc;
        }

        /* 7. Link com efeito hover */
        a {
            color: #0066cc;
            text-decoration: none;
        }

        a:hover {
            color: #ff4500;
        }
    </style>
